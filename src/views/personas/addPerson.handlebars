<div class="container-fluid p-5" style="background:rgb(103, 181, 236);width:100%;height:900px">
  <div class="col-6 mx-auto ">
    <div class="p-3" >  
      <div class="card " style="background: turquoise;box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);">
        <div class="card-header">
            <h3 class="text-center text-primary">Personas</h3>
        </div>
        <div class="body p-3">
       <div >
                <form class="form-horizontal" action="/addPerson" method="post">
                    <fieldset >
                        

                        <div class="form-group mb-2"  >
                            <div class="row">
                              <span class="col-md-1 col-md-offset-2 text-center">
                             <i class="fi fi-rr-user"></i>
                            </span>
                            <div class="col-md-10">
                                <input autofocus id="nombres" name="nombres" type="text" placeholder="ingrese nombres" class="form-control">
                            </div>
                            </div>
                        </div>
                        <div class="form-group mb-2">
                            <div class="row">
                              <span class="col-md-1 col-md-offset-2 text-center">
                                 <i class="fi fi-rr-user"></i>
                                </span>
                            <div class="col-md-10  col-md-offset-2">
                                <input id="apellidos" name="apellidos" type="text" placeholder="ingrese apellidos" class="form-control">
                            </div>
                            </div>
                        </div>

                         <div class="form-group mb-2">
                            <div class="row">
                              <span class="col-md-1 col-md-offset-2 text-center">
                               <i class="fi fi-rr-id-badge"></i>
                                </span>
                            <div class="col-md-10 mb-2">
                                <input id="cedula" name="cedula" type="text" placeholder="DNI V/E 99.999.999" class="form-control">
                            </div>
                            </div>
                        </div>

                        <div class="form-group mb-2">
                           <div class="row">
                             <span class="col-md-1 col-md-offset-2 text-center">
                              <i class="fi fi-rr-envelope"></i>
                              </span>
                            <div class="col-md-10">
                                <input id="correo" name="correo" type="text" placeholder="ingrese Email" class="form-control">
                            </div>
                           </div>
                        </div>

                        <div class="form-group mb-2">
                            <div class="row">
                              <span class="col-md-1 col-md-offset-2 text-center">
                               <i class="fi fi-rr-circle-phone-flip"></i>
                                </span>
                            <div class="col-md-10 mb-2">
                                <input id="phone" name="phone" type="text" placeholder="ingrese telefono" class="form-control">
                            </div>
                            </div>
                        </div>

                         <div class="form-group mb-2">
                            <div class="row">
                              <span class="col-md-1 col-md-offset-2 text-center">
                               <i class="fi fi-rr-dice-d6"></i>
                                </span>
                            <div class="col-md-10 mb-2">
<select id="status" name="status" class="form-select" aria-label="Default select example">
  <option selected>Elija status de la persona</option>
    {{#each status}}
  <option value="{{id_sta}}">{{status}}</option>
   {{/each}}
</select>
                            </div>
                            </div>
                        </div>

                     

                        <div class="form-group">
                            <div class="col-md-10 text-center mt-3 d-grid gap-2 mx-auto">
                                <button type="submit" class="btn btn-primary btn-lg">Agregar</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>  
     </div>
  </div>
</div>